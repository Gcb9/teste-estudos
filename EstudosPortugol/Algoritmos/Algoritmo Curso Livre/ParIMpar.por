programa
{
	funcao inicio()
	{ 	inteiro n
	
			escreva("Digite um numero qualquer ")
			leia(n)

			se (n % 2 == 0) {
				escreva("O numero ", n, " e par.")
				}

			senao {
				escreva("O numero ", n, " e impar.")
			}
				
		
	}
}
